<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest02MainActivityv10">

    <EditText
        android:id="@+id/pokemonNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Pokémon name"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="EditText for Pokémon name" />

    <!-- Buton pentru a iniția cererea -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toBottomOf="@id/pokemonNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="Button to search Pokémon" />

    <!-- ImageView pentru a afișa imaginea Pokémon-ului -->
    <ImageView
        android:id="@+id/pokemonImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/searchButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="Image of the Pokémon" />

    <!-- TextView pentru tipurile Pokémon-ului -->
    <TextView
        android:id="@+id/typesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Types: "
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pokemonImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="Text displaying Pokémon types" />

    <!-- TextView pentru abilitățile Pokémon-ului -->
    <TextView
        android:id="@+id/abilitiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abilities: "
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/typesTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="Text displaying Pokémon abilities" />


</androidx.constraintlayout.widget.ConstraintLayout>